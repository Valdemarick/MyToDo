@using MyToDo.Web.Services.Abstractions
@inject IMemberService MemberService

<ModalDialog Title="Регистрация нового пользователя" Text="Test" OnSubmit="@RegisterAsync" OnClose="@OnClose">
    <EditForm Model="@_registerMemberDto" OnValidSubmit="@RegisterAsync">
        <FluentValidationValidator></FluentValidationValidator>
        <div class="mb-3">
            <label for="firstNameInput" class="form-label">Имя</label>
            <input type="text" class="form-control" id="firstNameInput" @bind="_registerMemberDto.FirstName">
            <ValidationMessage For="() => _registerMemberDto.FirstName"></ValidationMessage>
        </div>
        <div class="mb-3">
            <label for="lastNameInput" class="form-label">Фамилия</label>
            <input type="text" class="form-control" id="lastNameInput" @bind="_registerMemberDto.LastName">
            <ValidationMessage For="() => _registerMemberDto.LastName"></ValidationMessage>
        </div>
        <div class="mb-3">
            <label for="emailInput" class="form-label">Почта</label>
            <input type="email" class="form-control" id="emailInput" @bind="_registerMemberDto.Email">
            <ValidationMessage For="() => _registerMemberDto.Email"></ValidationMessage>
        </div>
    </EditForm>
</ModalDialog>
